@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <h2><b>About</b></h2>
    <p>
        It’s a easy clicker game in which you play as the attackers who plunder the village. With collected money you can buy and upgrade new heroes that help you.
        It’s was my diploma project about Idle games. In future i wanna turn this simple game into a extensive <b>RPG game</b>!!
    </p>
    <p>
        <a href="https://github.com/jaroslawrutk/PillageVillage">Source code</a>
    </p>
    <p>
        <a href="https://github.com/jaroslawrutk/PillageVillage/releases/download/0.0.1/PillageVillage-0.0.1.apk">Download</a>
    </p>

</div>

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner11.png" alt="baner11" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Buy and upgrade heroes!!
                    
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner13.png" alt="baner13" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                   Find treasures!!
                    
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner12.png" alt="baner12" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Get the biggest score in the HIGHSCORE board.
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


